#!/bin/hush
# Start up file for DAHDI

DAHDICONF="/persistent/etc/dahdi/system.conf"
TMP=`grep  '^span' ${DAHDICONF}`
if [[ "`echo ${TMP}|grep 'd4'`" != "" ]]; then
	T1E1MODE=1;
else
	if [[ "`echo ${TMP}|grep 'esf'`" != "" ]]; then
		T1E1MODE=1;
	else
		T1E1MODE=2;
	fi
fi

case $1 in
	start) modprobe wpr1 t1e1mode=$T1E1MODE;
	       dahdi_cfg;;
	stop) modprobe -r wpr1;;
	restart) modprobe -r wpr1;
		modprobe wpr1 t1e1mode=$T1E1MODE;
		dahdi_cfg;;
	enable) rm -f /persistent/etc/rc.d/S40dahdi; 
	        ln -s /persistent/etc/init.d/dahdi /persistent/etc/rc.d/S40dahdi;;
	disable) rm -f /persistent/etc/rc.d/S40dahdi;;
        *) echo 'Syntax: /etc/init.d/dahdi [command]'
           echo ''
           echo '       Available commands:'
           echo '               start   Start the service'
           echo '               stop    Stop the service'
           echo '               restart Restart the service'
           echo '               enable  Enable service autostart'
           echo '               disable Disable service autostart'
esac
